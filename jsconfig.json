{
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@@/*": ["./*"],
        "@/*": ["src/*"],
        "@assets/*": ["src/assets/*"],
        "@common/*": ["src/common/*"],
        "@components/*": ["src/components/*"],
        "@hooks/*": ["src/hooks/*"],
        "@pages/*": ["src/pages/*"],
        "@router/*": ["src/router/*"],
        "@service/*": ["src/service/*"],
        "@store/*": ["src/store/*"],
        "@utils/*": ["src/utils/*"]
      },
      "experimentalDecorators": true
    },
    "exclude": ["node_modules", "build"]
  }
